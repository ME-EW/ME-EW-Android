<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meew" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryDark">@color/main_purple_500</item>
        <item name="colorAccent">@color/main_purple_500</item>
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/grey_700</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor">@color/grey_700</item>
        <item name="android:windowBackground">@color/grey_700</item>
        <item name="android:textColor">@color/white</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="Meew_Edit_Text" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="Meew_Button" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/drawable_button_style_8</item>
        <item name="android:textColor">@color/state_enable_color</item>
        <item name="android:textAppearance">@style/Title3_Bold_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Meew_Progress_Bar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:theme">@style/Theme.MaterialComponents.DayNight</item>
        <item name="indicatorColor">@color/main_purple_500</item>
        <item name="trackColor">@color/grey_600</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="trackThickness">6dp</item>
    </style>

    <style name="Meew_Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/Body3_Regular_14</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/selector_square_check_24dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_top_round_24dp_grey500</item>
        <item name="behavior_peekHeight">700dp</item>
    </style>
</resources>