<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.configure.ConfigureActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_title"
                style="@style/Title3_Bold_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="설정" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/txt_nickname"
            style="@style/Title2_Bold_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
            tools:text="닉네임 님" />

        <TextView
            android:id="@+id/txt_email"
            style="@style/Body4_Medium_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_400"
            app:layout_constraintEnd_toStartOf="@id/btn_management"
            app:layout_constraintStart_toStartOf="@id/txt_nickname"
            app:layout_constraintTop_toBottomOf="@id/txt_nickname"
            tools:text="meew@sopt.org" />

        <TextView
            android:id="@+id/btn_management"
            style="@style/Body2_Medium_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:text="관리"
            app:layout_constraintBottom_toBottomOf="@id/txt_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_email" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="32dp"
            android:background="@color/grey_600"
            app:layout_constraintTop_toBottomOf="@id/txt_email" />

        <TextView
            android:id="@+id/txt_alarm"
            style="@style/Body1_Medium_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="32dp"
            android:text="알림 설정"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_1" />

        <ImageView
            android:id="@+id/btn_alarm_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:padding="20dp"
            android:src="@drawable/ic_arrow_right_white_8dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_alarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_alarm" />

        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_600"
            app:layout_constraintTop_toBottomOf="@id/txt_alarm" />

        <TextView
            android:id="@+id/txt_title_service"
            style="@style/Body4_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="24dp"
            android:text="서비스 정보"
            android:textColor="@color/grey_400"
            app:layout_constraintTop_toBottomOf="@id/divider_2" />

        <View
            android:id="@+id/divider_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/grey_600"
            app:layout_constraintTop_toBottomOf="@id/txt_title_service" />

        <TextView
            android:id="@+id/btn_notice"
            style="@style/Body1_Medium_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="공지사항"
            app:layout_constraintTop_toBottomOf="@id/divider_3" />

        <View
            android:id="@+id/divider_4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/grey_600"
            app:layout_constraintTop_toBottomOf="@id/btn_notice" />

        <TextView
            android:id="@+id/btn_policy"
            style="@style/Body1_Medium_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="약관 및 정책"
            app:layout_constraintTop_toBottomOf="@id/divider_4" />

        <View
            android:id="@+id/divider_5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/grey_600"
            app:layout_constraintTop_toBottomOf="@id/btn_policy" />

        <TextView
            android:id="@+id/btn_personal_info"
            style="@style/Body1_Medium_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="개인정보 처리 방침"
            app:layout_constraintTop_toBottomOf="@id/divider_5" />

        <View
            android:id="@+id/divider_6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_600"
            app:layout_constraintTop_toBottomOf="@id/btn_personal_info" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="24dp"
            app:layout_constraintTop_toBottomOf="@id/divider_6">

            <TextView
                style="@style/Body1_Medium_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버전 정보"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Body4_Medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_400"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="최신 버전" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/btn_logout"
            style="@style/Body1_Medium_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:padding="4dp"
            android:text="로그아웃"
            android:textColor="@color/grey_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_version" />

        <TextView
            android:id="@+id/txt_withdrawal_1"
            style="@style/Body4_Medium_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="미우를 탈퇴하려면 "
            android:textColor="@color/grey_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_withdrawal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_logout"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/btn_withdrawal"
            style="@style/Body4_Medium_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여기"
            android:textColor="@color/red_400"
            app:layout_constraintBottom_toBottomOf="@id/txt_withdrawal_1"
            app:layout_constraintEnd_toStartOf="@+id/txt_withdrawal_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txt_withdrawal_1"
            app:layout_constraintTop_toTopOf="@id/txt_withdrawal_1" />

        <TextView
            android:id="@+id/txt_withdrawal_2"
            style="@style/Body4_Medium_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 눌러주세요"
            android:textColor="@color/grey_400"
            app:layout_constraintBottom_toBottomOf="@id/btn_withdrawal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_withdrawal"
            app:layout_constraintTop_toTopOf="@id/btn_withdrawal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
